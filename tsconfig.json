{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["chrome", "node"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["extension/src/*"],
      "@/*": ["extension/src/*"]
    }
  },
  "include": ["extension/src", "extension/tests"],
  "exclude": ["node_modules", "dist", "extension/dist"]
}
