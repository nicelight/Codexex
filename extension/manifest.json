{
  "manifest_version": 3,
  "name": "Codex Tasks Watcher",
  "description": "Observes Codex tabs and prepares notifications when tasks complete.",
  "version": "0.1.0",
  "permissions": ["notifications", "alarms", "storage", "tabs", "scripting"],
  "host_permissions": ["https://*.openai.com/*"],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Codex Tasks Watcher"
  },
  "content_scripts": [
    {
      "matches": ["https://*.openai.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "minimum_chrome_version": "120"
}
