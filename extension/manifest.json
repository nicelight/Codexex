{
  "manifest_version": 3,
  "name": "Codex Tasks Watcher",
  "description": "Observes Codex tabs and prepares notifications when tasks complete.",
  "version": "0.1.0",
  "permissions": ["notifications", "alarms", "storage", "tabs", "scripting"],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.chatgpt.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Codex Tasks Watcher"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.openai.com/*",
        "https://*.chatgpt.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/content.main.js"],
      "matches": [
        "https://*.openai.com/*",
        "https://*.chatgpt.com/*"
      ]
    }
  ],
  "minimum_chrome_version": "120"
}
